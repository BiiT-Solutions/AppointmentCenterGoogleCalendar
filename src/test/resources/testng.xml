<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite thread-count="1" verbose="1" name="Infographic Engine v2">
    <listeners>
        <listener class-name="com.biit.appointment.google.TestListener"/>
    </listeners>

    <test name="Google CalDAV" enabled="true" preserve-order="true">
        <groups>
            <run>
                <!-- Jenkins cannot obtain the tokens -->
                <include name="googleClientTest"/>
                <include name="googleCredentialsTest"/>
            </run>
        </groups>
        <classes>
            <class name="com.biit.appointment.google.client.GoogleClient"/>
            <class name="com.biit.appointment.google.client.CredentialsTest"/>
        </classes>
    </test>
</suite>